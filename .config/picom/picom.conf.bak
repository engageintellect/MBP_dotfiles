#################################
#             Shadows           #
#################################

shadow = true;
shadow-radius = 10;
shadow-opacity = .7;
shadow-offset-x = 0;
shadow-offset-y = 0;
shadow-ignore-shaped = false;
shadow-exclude = [ "name = 'Notification'",
                   "override_redirect = 1 && !WM_CLASS@:s",
                   "_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'",
                   "_GTK_FRAME_EXTENTS@:c",
                   "class_g ?= 'Polybar'",
                   "class_g ?= 'Dmenu'",
                   "class_g ?= 'Rofi'",
                   "class_g ?= 'i3-frame'",
                   "class_g ?= 'trayer'" ];


#################################
#           Fading              #
#################################

fading = true;
fade-delta = 7;
fade-in-step = 0.09;
fade-out-step = 0.09;
fade-exclude = [];
no-fading-openclose = false;
# no-fading-destroyed-argb = false

#################################
#   Transparency / Opacity      #
#################################

active-opacity = 1.0
inactive-opacity = 1.0;
frame-opacity = 1.0;
#inactive-dim = 0.4;
#menu-opacity = 1.0;
inactive-opacity-override = false;
focus-exclude = [ "class_g = 'Cairo-clock'"];
# inactive-dim-fixed = 1.0
opacity-rule = [ "99:name *?= 'Call'",
                "95:class_g = 'XTerm' && !_NET_WM_STATE@:32a",
                "100:class_g = 'URxvt' && !_NET_WM_STATE@:32a",
                "100:class_g = 'Qutebrowser' && !_NET_WM_STATE@:32a",
                "100:class_g = 'Surf' && !_NET_WM_STATE@:32a",
                "100:class_g = 'Firefox' && !_NET_WM_STATE@:32a",
                "0:_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'",
                "96:_NET_WM_STATE@:32a *= '_NET_WM_STATE_STICKY'" ];


#################################
#     Background-Blurring       #
#################################

blur-method = "dual_kawase"; 
blur-strength = 12;
blur-size = 3;
# blur-deviation = false
blur-background = true;
# blur-background-frame = false
# blur-background-fixed = false
blur-kern = "3x3box";

blur-background-exclude = [ "window_type = 'dock'",
                            "window_type = 'desktop'",
                            "class_g = 'Polybar'",
                            "_GTK_FRAME_EXTENTS@:c"

];
#################################
#       General Settings        #
#################################

experimental-backends = true;
backend = "glx";
glx-swap-method = 0;
vsync = true;
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = false;
unredir-if-possible = false;
refresh-rate = 0
detect-transient = true;
detect-client-leader = true;
glx-copy-from-front = false;
resize-damage = 1;
glx-no-stencil = false;
use-damage = false;
xrender-sync-fence = false;


wintypes:
{
  tooltip = { fade = true; shadow = true; opacity = 0.75; focus = true; full-shadow = false; };
  dock = { shadow = false; }
  dnd = { shadow = false; }
  popup_menu = { opacity = 0.8; }
  dropdown_menu = { opacity = 0.8; }
};
