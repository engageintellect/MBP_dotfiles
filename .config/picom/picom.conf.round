# BUILD: Surface Book 2 
# VERSION: Round Corners

#################################
#             Shadows           #
#################################

shadow = false;
shadow-radius = 10;
shadow-opacity = .7;
shadow-offset-x = 0;
shadow-offset-y = 0;
#shadow-ignore-shaped = true;
shadow-exclude = ["name = 'Notification'",
                  "class_g ?= 'Notify-osd'",
                  "class_g = 'Cairo-clock'",
                  "class_g ?= 'Polybar'",
                  "class_g ?= 'Dmenu'",
                  "_GTK_FRAME_EXTENTS@:c"
];

#################################
#           Fading              #
#################################

fading = true;
fade-delta = 7;
fade-in-step = 0.09;
fade-out-step = 0.09;
no-fading-openclose = true;
# fade-exclude = []

#################################
#   Transparency / Opacity      #
#################################

active-opacity = 1.0
inactive-opacity = 1.0;
frame-opacity = 1.0;
#inactive-dim = 0.4;
#menu-opacity = 1.0;
inactive-opacity-override = "false";
focus-exclude = [ "class_g = 'Cairo-clock'"];
# inactive-dim-fixed = 1.0
opacity-rule = [ "99:name *?= 'Call'",
                "95:class_g = 'XTerm' && !_NET_WM_STATE@:32a",
                "100:class_g = 'URxvt' && !_NET_WM_STATE@:32a",
                "100:class_g = 'Qutebrowser' && !_NET_WM_STATE@:32a",
                "100:class_g = 'Surf' && !_NET_WM_STATE@:32a",
                "100:class_g = 'Firefox' && !_NET_WM_STATE@:32a",
                "0:_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'",
                "96:_NET_WM_STATE@:32a *= '_NET_WM_STATE_STICKY'" 
                ];

#################################
#     Background-Blurring       #
#################################
blur-background = true;
blur-method = "kawase";
blur-strength = 12;
#important
blur-deviation = 70;
blur-background-frame = true;
blur-background-fixed = true;

blur-background-exclude = [
  "window_type = 'dock'",
  "window_type = 'desktop'"
];

#################################
#       General Settings        #
#################################

experimental-backends = true;
backend = "glx";
vsync = true;
dbe = false;

mark-wmwin-focused = true;
mark-overdir-focused = true;

detect-rounded-corners = true;
corner-radius = 25.0;
round-borders = 1;

rounded-corners-exclude = ["class_g = 'polybar'",
                           "class_g = 'dmenu'",
                           "window_type = 'dock'"
                           ];

detect-client-opacity = true;
detect-transient = true;
detect-client-leader = true;
# enabling causes blur / opacity artifacts
use-damage = false;
refresh-rate = 0;

glx-no-stencil = false;
glx-copy-from-front = false;
glx-no-rebind-pixmap = false;
# xrender-sync-fence = true;

wintypes:
{
	tooltip = {
 		fade = true; 
		shadow = true; 
		opacity = 0.75; 
		focus = true; 
		full-shadow = false;
 	};
  	dock = {
		 shadow = false; 
	}
  	dnd = { 
		shadow = false;
	 }
  	popup_menu = { 
		opacity = 0.8;
	 }
  	dropdown_menu = { 
		opacity = 0.8;
	 }
};
